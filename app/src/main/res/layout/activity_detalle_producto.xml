<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Actividades.DetalleCatalogoActivity">

    <ImageView
        android:id="@+id/imgDetalleCatalogo"
        android:layout_width="match_parent"
        android:layout_height="294dp"
        app:srcCompat="@drawable/cojinblanco" />

    <TextView
        android:id="@+id/lblDescripcionDetalleCatalogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/lblTituloDetalleDetalleCatalogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:text="EspecificaciÃ³n del Producto" />

    <TextView
        android:id="@+id/lblDetalleDetalleCatalogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Medidas 10cm x 10cm" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblPrecioDetalleCatalogo"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="TextView" />

        <!--<TextView
            android:id="@+id/lblPrecioOfertaDetalleCatalogo"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="TextView"
            android:textSize="20dp"/>-->

        <Button
            android:id="@+id/btnAgregarDetalleCatalogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Agregar" />
    </LinearLayout>

</LinearLayout>